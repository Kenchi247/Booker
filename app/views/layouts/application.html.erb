<!DOCTYPE html>
<html>
  <head>
    <title>Booker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body> 
<style>
  .header {
    width: 100%;
    height: 50px;
    background-color: #222;
    padding: 5px 0;
    margin-bottom: 5px;
    font-size: 14px;
  }
  .title {
    color: white;
    font-size:15px;
  }

</style>
    <div class="header">
    <div class="container">
      <div class="row title">
        <div class="col-xs-5">
        <span>Bookers</span>
      </div>
    </div>
      <% if user_signed_in? %>
      <div class="row">
        <div class="col-xs-1 col-xs-offset-8">
         <%= link_to user_path(current_user.id) do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home<% end %>
        </div>
          <div class="col-xs-1">
            <%= link_to users_path do %><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              Users<% end %>
          </div>
          <div class="col-xs-1">
           <%= link_to books_path do %>
           <span class="glyphicon glyphicon-book" aria-hidden="true"></span>  Books<% end %>
          </div>
          <div class="col-xs-1">
            <%= link_to destroy_user_session_path, method: :delete do %>
            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              logout<% end %>
          </div>
      <% else %>
      <div class="col-xs-1 col-xs-offset-8">
         <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>  Home<% end %>
        </div>
          <div class="col-xs-1">
            <%= link_to home_about_path do %>
            <span class="glyphicon glyphicon-link" aria-hidden="true"></span> About<% end %>
          </div>
          <div class="col-xs-1">
            <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
             sign up<% end %>
          </div>
          <div class="col-xs-1">
            <%= link_to new_user_session_path do %>
            <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
              login<% end %>
          </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
    <%= yield %>
      <div class="container">
        <div class="row">
     <div class="col-xs-3 col-xs-offset-9">
       <p>CopyRight Infratop.inc</p>
     </div>
   </div>
 </div>
     </div>
  </body>
</html>
