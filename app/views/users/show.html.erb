<div class="container">
	<div class="row">
	<style>
				.book >div {
					border-bottom: 1px solid gray;
					min-height: 50px;
					margin: 5px 0;
				}
				.ame {
					border-top:  1px solid gray;
					padding :5px 0;
					min-height: 37px;
				}
				.botan {
					margin-top: 15px;
				}

				  .submit {
    margin-bottom: 10px;
  }
			</style>
	<%= notice %>
		<div class="col-xs-2">
			<h2>User info</h2>
			<div class="row">
			          <%= attachment_image_tag @user, :profile_image, size:"100x100", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			      </div>
			   <div class="row">
			        <table>
			        	<tbody>
			        	<div class="row ame">
			        	  <div class="col-xs-5">Name</div>
			        	  <div class="col-xs-7"><%= @user.name %></div>
			        	</div>
			        	<div class="row ame">
			        	  <div class="col-xs-5">introduction</div>
			        	  <div class="col-xs-7"><%= @user.introduction %></div>
			            </div>
			        	</tbody>
			        </table>
			        <div class="row botan">
			        	<%= link_to edit_user_path(@user) do %>
			        	<button type="button" class="btn-default col-xs-11 " aria-label="Center Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true" ></span><% end %></button>
			        </div>
			    </div>
			<h2>New book</h2>
	  <% if @book.errors.any? %>
		 <div id="error_explanation">
			<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
			 <uL>
			 <% @book.errors.full_messages.each do |message| %>
			  <li><%= message %></li>
			   <% end %>
			</uL>
		</div>
		<% end %>
		 <%= form_for(@book) do |f| %>
			<div class="field">
				<div class="row submit">
				 	<label>Title</label><br>
				     <%= f.text_field :title, class:"col-xs-12" %>
			      </div>
				  <div class="row submit">
					<label>Opinion</label><br>
				  <%= f.text_area :body, class:"col-xs-12" %>
			    </div>
			    <div class="row submit">
				<%= f.submit'Create Book', class:"btn btn_info col-xs-12 col-xs-offset-0 sign_in", style:"background-color: #337ab7; color: #fff;" %>
				<% end %>
				</div>
			</div>
		</div>

<div class="col-xs-9 col-xs-offset-1">
			<h2>Books</h2>
				<div class="row book">
					    <div class="col-xs-4">      </div>
			 			<div class="col-xs-4">Title</div>
			 			<div class="col-xs-4">Opinion</div>
			 	</div>
			 	<table>
			 		<% @books.each do |book| %>
			 		 <div class="row book">
			 		 	<div class="col-xs-4"><%= attachment_image_tag @user, :profile_image, size:"40x40", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></div>
			 		 	<div class="col-xs-4"><%= link_to book_path(book.id) do %><%= book.title %></div><% end %>
			 		 	<div class="col-xs-4"><%= book.body %></div>
			 		 </div>
			 		 <% end %>
		     </table>
		</div>
	</div>
</div>
</div>
</div>