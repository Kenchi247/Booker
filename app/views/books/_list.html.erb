<div class="container">
	 <% if book.errors.any? %>
			<h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
			<ul>
			 <% book.errors.full_messages.each do |message| %>
			 <li><%= message %></li>
			   <% end %>
			</ul>
		<% end %>
	<style>
				.book >div {
					border-bottom: 1px solid gray;
					min-height: 50px;
					margin: 5px 0;
				}
				.ame {
					border-top:  1px solid gray;
					padding :5px 0;
					min-height: 37px;
				}
				.botan {
					margin-top: 15px;
				}
				  .submit {
    margin-bottom: 10px;
  }
			</style>
	<%= notice %>
	<div class="row">
				<div class="col-xs-2">
			<h2>User info</h2>
					<div class="row">
			          <%= attachment_image_tag user, :profile_image, size:"100x100", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
			      </div>
			   <br>
			        <table>
			        	<tbody>
			        	<div class="row ame">
			        	  <div class="col-xs-5">Name</div>
			        	  <div class="col-xs-7"><%= user.name %></div>
			        	</div>
			        	<div class="row ame">
			        	  <div class="col-xs-5">introduction</div>
			        	  <div class="col-xs-7"><%= user.introduction %></div>
			            </div>
			        	</tbody>
			        </table>
			        <div class="row botan">
			        	<%= link_to edit_user_path(user) do %>
			        	<button type="button" class="btn-default col-xs-11 " aria-label="Center Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true" ></span><% end %></button>
			        </div>
			<h2>New book</h2>
		 <%= form_for(book) do |f| %>
			<div class="field">
				<div class="row submit">
				 	<label>Title</label><br>
				     <%= f.text_field :title, class:"col-xs-12" %>
			      </div>
				  <div class="row submit">
					<label>Opinion</label><br>
				  <%= f.text_area :body, class:"col-xs-12" %>
			    </div>
			    <div class="row submit">
				<%= f.submit'Create Book', class:"btn btn_info col-xs-12 col-xs-offset-0 sign_in", style:"background-color: #337ab7; color: #fff;" %>
				<% end %>
			</div>
	</div>
</div>